# vim: ft=conf

general {
        colors = true
        interval = 5
}

order += "volume master"
order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
order += "battery all"
order += "memory"
order += "tztime local"

volume master {
        format = "ğŸ”Š %volume"
        format_muted = "ğŸ”‡"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

