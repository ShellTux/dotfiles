precmd() {
	print -Pn "\e]0;%~\a"
}

preexec() {
	printf '\033]2;%s\a' "$(echo "$1" | cut -d\  -f1)"
}

help() {
	"$@" --help 2>&1 | bathelp
}

shellstart() {
	for neofetch in neofetch fastfetch
	do
		if command -v "$neofetch" &>/dev/null
		then
			"$neofetch"
			break
		fi
	done
}

function ya() {
	local tmp
	tmp="$(mktemp -t "yazi-cwd.XXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]
	then
		cd -- "$cwd" || exit
	fi
	rm -f -- "$tmp"
}

