# Start - Custom functions

# ex - archive extractor
# usage: ex <file>
ex ()
{
	if [ -f "$1" ]
	then
		case $1 in
			*.tar.bz2)   tar xjf "$1"    ;;
			*.tar.gz)    tar xzf "$1"    ;;
			*.bz2)       bunzip2 "$1"    ;;
			*.rar)       unrar x "$1"    ;;
			*.gz)        gunzip "$1"     ;;
			*.tar)       tar xf "$1"     ;;
			*.tbz2)      tar xjf "$1"    ;;
			*.tgz)       tar xzf "$1"    ;;
			*.zip)       unzip "$1"      ;;
			*.Z)         uncompress "$1" ;;
			*.7z)        7z x "$1"       ;;
			*)           echo "'$1' cannot be extracted via ex()" ;;
		esac
	else
		echo "'$1' is not a valid file"
	fi
}

mkcd() {
	mkdir --parents "$@"
	cd "$1" || exit
}

mktouch() {
	for file in $@
	do
		mkdir --parents "$(dirname "$file")"
		touch "$file"
	done
}

vimfzf () {
      wd="$(pwd)"
      file=$(find -L "$HOME" \
	      ! -path "$HOME/.cache/*" \
	      ! -path "*/.stfolder/*" \
	      ! -path "*/.stversions/*" \
	      ! -path "*/__pycache__/*" \
	      -maxdepth 7 2>/dev/null | sk --exact --preview='bat --color=always {}')
      [ -f "$file" ] && cd "$(dirname "$file")" || exit
      [ -d "$file" ] && cd "$file" || exit
      [ -f "$file" ] || [ -d "$file" ] && $EDITOR "$file" && cd "$wd" || exit
}

# git repository greeter
last_repository=
check_directory_for_new_repository() {
	current_repository=$(git rev-parse --show-toplevel 2> /dev/null)

	if [ "$current_repository" ] && [ "$current_repository" != "$last_repository" ]
	then
		FETCH_MODIFIED_DATE="$(\
			stat --format=%Y \
			"$(git rev-parse --show-toplevel)/.git/FETCH_HEAD"\
			)"
		THREADSHOULD_DATE="$(date --date='1 minute ago' +%s)"
		if \
			[ -n "$(git remote -v)" ] \
			&& \
			[ "$FETCH_MODIFIED_DATE" -lt "$THREADSHOULD_DATE" ]
		then
			echo This repository was fetched longer than 1 day ago
			printf 'Fetch [y/N]? '
			read -r confirmation
			if [ "$confirmation" = y ] || [ "$confirmation" = Y ]
			then
				echo Fetching ...
				git fetch --verbose
			fi
			unset confirmation
		fi
		unset FETCH_MODIFIED_DATE THREADSHOULD_DATE
		onefetch_language="$(onefetch --output=json | jq --raw-output '.infoFields[6].LanguagesInfo.languagesWithPercentage[0].language')"
		onefetch_image="${XDG_CONFIG_HOME:-$HOME/.config}/onefetch/images/$onefetch_language.png"
		! onefetch --image="$onefetch_image" 2>/dev/null && onefetch
	fi
	last_repository=$current_repository
}

activatevenv() {
	for dir in venv/ .venv/ env/ .env/
	do
		if [ -d "$dir" ]
		then
			activate_file="./$dir/bin/activate"
			if [ -e "$activate_file" ]
			then
				source "$activate_file"
				echo "Virtual environment activated automatically"
				break
			fi
		fi
	done
	unset activate_file dir
}

cd() {
	builtin cd "$@" || return
	check_directory_for_new_repository
	activatevenv
}

screenresolution() {
	xrandr | awk '/\*/ {print $1}'
}

